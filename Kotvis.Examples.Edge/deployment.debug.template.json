{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "subscriber": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.Subscriber>.debug}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8081/tcp": [
                      {
                        "HostPort": "8081"
                      }
                    ]
                  }
                }
              }
            }
          },
          "pubsubsimulator": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.PubSubSimulator>.debug}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8082/tcp": [
                      {
                        "HostPort": "8082"
                      }
                    ]
                  }
                }
              }
            }
          },
          "scheduler": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.Scheduler>.debug}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "pubsubsimulatorToIoTHub": "FROM /messages/modules/pubsubsimulator/outputs/* INTO $upstream",
          "subscriberToIoTHub": "FROM /messages/modules/subscriber/outputs/* INTO $upstream",
          "storageToIoTHub": "FROM /messages/modules/storage/outputs/* INTO $upstream",
          "schedulerToIoTHub": "FROM /messages/modules/scheduler/outputs/* INTO $upstream",
          "PubSubSimulatorToIoTHub": "FROM /messages/modules/Kotvis.Examples.Edge.PubSubSimulator/outputs/* INTO $upstream",
          "SchedulerToIoTHub": "FROM /messages/modules/scheduler/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
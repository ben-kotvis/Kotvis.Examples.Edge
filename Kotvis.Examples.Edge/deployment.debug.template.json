{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "centraledge": {
                "username": "${CONTAINER_REGISTRY_USERNAME}",
                "password": "${CONTAINER_REGISTRY_PASSWORD}",
                "address": "${CONTAINER_REGISTRY}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "subscriber": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.Subscriber>.debug}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8081/tcp": [
                      {
                        "HostPort": "8081"
                      }
                    ],
                    "50002/tcp": [
                      {
                        "HostPort": "50001"
                      }
                    ]
                  }
                }
              }
            },
            "env": {
              "SUBSCRIBER_ADDRESS": {
                "value":  "subscriber"
              }
            }
          },
          "pubsubsimulator": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.PubSubSimulator>.debug}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8082/tcp": [
                      {
                        "HostPort": "8082"
                      }
                    ]
                  }
                }
              }
            }
          },
          "scheduler": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.Scheduler>.debug}",
              "createOptions": {}
            }
          },
          "kotvisexamplesedgeactor": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../Kotvis.Examples.Edge.Actor>.debug}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "3000/tcp": [
                      {
                        "HostPort": "3000"
                      }
                    ],
                    "50001/tcp": [
                      {
                        "HostPort": "50001"
                      }
                    ]
                  }
                }
              }
            },
            "env": {
              "ID_SCOPE": {
                "value": "${ID_SCOPE}"
              },
              "GLOBAL_DEVICE_ENDPOINT": {
                "value": "${GLOBAL_DEVICE_ENDPOINT}"
              },
              "PRIMARY_KEY": {
                "value": "${PRIMARY_KEY}"
              },
              "SECONDARY_KEY": {
                "value": "${SECONDARY_KEY}"
              }
            }
          },
          "redis": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "redis",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "6379/tcp": [
                      {
                        "HostPort": "6380"
                      }
                    ]
                  }
                }
              }
            }
          },
          "placement": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "daprio/dapr",
              "createOptions": {
                "Cmd": [
                  "./placement",
                  "--port",
                  "50005"
                ],
                "HostConfig": {
                  "PortBindings": {
                    "50005/tcp": [
                      {
                        "HostPort": "50005"
                      }
                    ]
                  }
                }

              }
            },
            "env": {
              "DAPR_HOST_IP": {
                "value": "placement"
              }
            }
          }
        }        
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "schedulerToIoTHub": "FROM /messages/modules/scheduler/outputs/to-subscriber INTO BrokeredEndpoint(\"/modules/subscriber/inputs/subscriberinbound\")",
          "schedulerToPubSubSimulator": "FROM /messages/modules/scheduler/outputs/to-pubsubsimulator INTO BrokeredEndpoint(\"/modules/pubsubsimulator/inputs/subscriberinbound\")",
          "SubscriberToScheduler": "FROM /messages/modules/subscriber/outputs/scheduler INTO BrokeredEndpoint(\"/modules/scheduler/inputs/schedule\")",
          "PubSubToScheduler": "FROM /messages/modules/pubsubsimulator/outputs/scheduler INTO BrokeredEndpoint(\"/modules/scheduler/inputs/schedule\")",
          "DeviceToUpstream": "FROM /messages/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "scheduler": {
      "properties.desired": {
       
      }
    }
  }
}